---
import { routes, Route } from "../../../lib/native/route";
import Header from "../../../components/native/header-profile"

export interface Props {
	readonly route: Route<any, any>;
}

const r = routes(Astro, Astro.props.route);
const envData = import.meta.env;
---

<!-- https://www.hyperui.dev/components/marketing/navigations#component-1 -->
<header aria-label="Site Header" class="bg-white shadow">
	<div
		class="mx-auto max-w-7xl px-2 sm:px-4 lg:divide-y lg:divide-gray-200 lg:px-8"
	>
		<div class="relative flex h-16 justify-between">
			<div class="relative z-10 flex px-2 lg:px-0">
				<div class="flex flex-shrink-0 items-center">
					<a
						href={r.uaHomeURL()}
						class="hidden rounded-md px-5 py-2.5 text-sm font-medium text-teal-600 transition hover:text-teal-600/75 sm:block"
					>
						<img
							src={r.uaAssetURL.brand(
								"/netspective/knowledge-center/knowledge-center-logo-full-161x35.png"
							)}
							alt="Knowledge Center"
						/>
					</a>
				</div>
			</div>
			<div
				class="relative z-0 flex flex-1 items-center justify-center px-2 sm:absolute sm:inset-0"
			>
				<div class="w-full max-w-xs">
					<label for="search" class="sr-only">Search</label>
					<div class="relative">
						<div
							class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3"
						>
							<svg
								class="h-5 w-5 flex-shrink-0 text-gray-400"
								viewBox="0 0 20 20"
								fill="currentColor"
								aria-hidden="true"
							>
								<path
									fill-rule="evenodd"
									d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z"
									clip-rule="evenodd"></path>
							</svg>
						</div>
						<input
							name="search"
							id="search"
							class="block w-full rounded-md border border-gray-300 bg-white py-2 pl-10 pr-3 text-sm placeholder-gray-500 focus:border-gray-900 focus:text-gray-900 focus:placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-900 sm:text-sm"
							placeholder="Search"
							type="search"
						/>
					</div>
				</div>
			</div>
			<div class="relative z-10 flex items-center lg:hidden">
				<!-- Mobile menu button -->
				<button
					type="button"
					onclick="toggleMenu()"
					class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 transition duration-150 ease-in-out"
					id="main-menu"
					aria-label="Main menu"
					aria-haspopup="true"
				>
					<span class="sr-only">Open menu</span>
					<!--
			  Icon when menu is closed.

			  Menu open: "hidden", Menu closed: "block"
			-->
					<svg
						class="block h-6 w-6"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
						></path>
					</svg>
					<!--
			  Icon when menu is open.

			  Menu open: "block", Menu closed: "hidden"
			-->
					<svg
						class="hidden h-6 w-6"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>
			<div
				class="hidden lg:relative lg:z-10 lg:ml-4 lg:flex lg:items-center"
			>
				<button
					type="button"
					class="flex-shrink-0 rounded-full bg-white p-1 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2"
				>
					<span class="sr-only">View notifications</span>
					<svg
						class="h-6 w-6"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"
						></path>
					</svg>
				</button>

				<!-- Profile dropdown -->
			<!--
				<div class="relative ml-4 flex-shrink-0">
					<div>
						<button
							type="button"
							class="flex rounded-full bg-white focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2"
							id="user-menu-button"
							aria-expanded="false"
							aria-haspopup="true"
						>
							<span class="sr-only">Open user menu</span>
							<img
								class="h-8 w-8 rounded-full"
								src="https://images.unsplash.com/photo-1517365830460-955ce3ccd263?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=4&w=256&h=256&q=80"
								alt=""
							/>
						</button>
					</div>

				</div>
			-->
			<Header client:only="react" envInfo={envData} />
			</div>
		</div>
		<nav
			aria-label="Site Nav"
			class="hidden lg:flex lg:items-center lg:space-x-4"
		>
			<a
				href={r.uaFlexibleURL("/gpm/")}
				class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>GPM</a
			>
			<a
				href={r.uaFlexibleURL("/initiatives/")}
				class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>Initiatives</a
			>

			<a
				href={r.uaFlexibleURL("/pkc/")} 
				class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>PKC</a
			>

			<a
				href="https://mi.infra.medigy.com/" target="_blank"
				class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>Quality System</a
			>

			<a
				href={r.uaFlexibleURL("/enterprise-architecture/")}
				class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>EA</a
			>

			<a
				href={r.uaFlexibleURL("/enterprise-architecture/explore/")}
				class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>Explore</a
			>

			<a
				href={r.uaNavigationURL.observability("/git/")}
				class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>History</a
			>

			<a
				href={r.uaFlexibleURL("/blog/prime/")}
				class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>Blog</a
			>

			<!-- <a href={r.uaFlexibleURL('/enterprise-architecture/dev-sec-ops-infrastructure/')} class="inline-flex items-center rounded-md py-2 px-3 text-sm font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900">DevSecOps Infrastructure</a> -->
		</nav>
	</div>

	<!-- Mobile menu, show/hide based on menu state. -->
	<nav class="lg:hidden" aria-label="Global" id="mobile-menu">
		<div class="space-y-1 px-2 pt-2 pb-3">
			<a
				href={r.uaFlexibleURL("/gpm/")}
				class="block rounded-md py-2 px-3 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>GPM</a
			>
			<a
				href={r.uaFlexibleURL("/initiatives/")}
				class="block rounded-md py-2 px-3 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>Initiatives</a
			>

			<a
				href={r.uaFlexibleURL("/pkc/")}
				class="block rounded-md py-2 px-3 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>PKC</a
			>

			<a
				href={r.uaFlexibleURL("/enterprise-architecture/")}
				class="block rounded-md py-2 px-3 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>Enterprise Architecture</a
			>

			<a
				href={r.uaFlexibleURL("/enterprise-architecture/explore/")}
				class="block rounded-md py-2 px-3 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>Explore</a
			>

			<a
				href={r.uaNavigationURL.observability("/git/")}
				class="block rounded-md py-2 px-3 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>History</a
			>

			<a
				href={r.uaFlexibleURL("/blog/prime/")}
				class="block rounded-md py-2 px-3 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900"
				>Blog</a
			>

			<!-- <a href={r.uaFlexibleURL('/enterprise-architecture/dev-sec-ops-infrastructure/')} class="block rounded-md py-2 px-3 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-gray-900">DevSecOps Infrastructure</a> -->
		</div>
		<div class="border-t border-gray-200 pt-4 pb-3">
			<div class="flex items-center px-4">
				<div class="flex-shrink-0">
					<img
						class="h-10 w-10 rounded-full"
						src="https://images.unsplash.com/photo-1517365830460-955ce3ccd263?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=4&w=256&h=256&q=80"
						alt=""
					/>
				</div>
				<div class="ml-3">
					<div class="text-base font-medium text-gray-800">
						TODO:Full Name?
					</div>
					<div class="text-sm font-medium text-gray-500">
						name@example.com
					</div>
				</div>
				<button
					type="button"
					class="ml-auto flex-shrink-0 rounded-full bg-white p-1 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2"
				>
					<span class="sr-only">View notifications</span>
					<svg
						class="h-6 w-6"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"
						></path>
					</svg>
				</button>
			</div>
		</div>
	</nav>
</header>

<script is:inline>
	window.onload = function () {
		document.getElementById("mobile-menu").classList.add("hidden");
	};

	function toggleMenu() {
		document.getElementById("mobile-menu").classList.toggle("hidden");
	}

	const parentMenuItems = document.querySelectorAll(".menu-item button");

	// Toggle focus each time a menu link is focused or blurred.
	for (const item of parentMenuItems) {
		item.addEventListener("click", function () {
			this.classList.remove("right-0", "mr-5");
			this.classList.add("transform", "rotate-180", "left-0", "ml-5");
			this.parentElement.classList.add(
				"absolute",
				"w-full",
				"py-3",
				"bg-gray-200",
				"text-center",
				"pb-0"
			);
			this.previousElementSibling.classList.add("px-4");
		});
	}
</script>
